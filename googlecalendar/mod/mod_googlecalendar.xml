<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="0.0.1" client="site"
	method="upgrade">
	<name>GoogleCalendar</name>
	<author>Jan Maat</author>
	<creationDate>February 2012</creationDate>
	<copyright>Copyright (C) 2012 Jan Maat All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>	
	<version>0.0</version>	
	<description>MOD_GOOGLECALENDAR_DESCRIPTION</description>
	
	<files>
		<filename module="mod_googlecalendar">mod_googlecalendar.php</filename>
		<filename>mod_googlecalendar.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>		
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_googlecalendar.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_googlecalendar.sys.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_googlecalendar.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_googlecalendar.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">					
					<field name="code" type="textarea"  filter="raw" label="CODE" description="DESCR_CODE" rows="5" cols="40" />							
			</fieldset>		
		</fields>
	</config>
</extension>
