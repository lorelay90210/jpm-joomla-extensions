<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="content" method="upgrade">
	<name>Availability Calendar Plugin</name>
	<author>Jan Maat/Pedro Manuel Baeza</author>
	<creationDate>January, 2012</creationDate>
	<copyright>This extension in released under the GNU/GPL License -
		http://www.gnu.org/copyleft/gpl.html</copyright>
	<authorEmail>jenj.maat@gmail.com/pedro.baeza@gmail.com</authorEmail>
	<version>1.4</version>
	<description>PLG_CONTENT_AVAILCAL_DESCRIPTION</description>


	<files>
		<filename plugin="availcal">availcal.php</filename>
		<filename>index.html</filename>		
	</files>
	<languages folder="language">
		<language tag="nl-NL">nl-NL/nl-NL.plg_content_availcal.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_content_availcal.sys.ini
		</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_availcal.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_availcal.sys.ini
		</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_availcal.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_availcal.sys.ini
		</language>
	</languages>


	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="one_month_display" type="checkbox" value="1"
					label="ONE_MONTH_DISPLAY" description="ONE_MONTH_DISPLAY_DESC" />
				<field name="nbr_months" type="text" size="2" default="3"
					label="NBR_OF_MONTHS" description="MONTHS_DISPLAY" />
				<field name="week_firstday" type="radio" size="1" default="0"
					label="WEEK_FIRSTDAY" description="WEEK_FIRSTDAY_DESC">
					<option value="0">WEEK_FIRSTDAY_SUNDAY</option>
					<option value="1">WEEK_FIRSTDAY_MONDAY</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>	
